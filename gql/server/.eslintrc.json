{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base", "node", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": ["prettier", "node"],
	"rules": {
		"prettier/prettier": ["warn"],
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off",
		"no-console": "off",
		"no-unused-vars": [
			"error",
			{
				"vars": "local",
				"args": "none"
			}
		]
	}
}
